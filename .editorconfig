root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2
ij_json_space_after_colon = true

[*.js]
ij_javascript_enforce_trailing_comma = whenmultiline
ij_javascript_force_semicolon_style = false
ij_javascript_import_merge_members = true
ij_javascript_import_sort_members = true
ij_javascript_spaces_within_brackets = true
ij_javascript_spaces_within_imports = true

[*.php]
ij_php_class_brace_style = end_of_line
ij_php_if_brace_force = always
ij_php_lambda_brace_style = end_of_line
ij_php_block_brace_style = end_of_line
ij_php_method_brace_style = end_of_line
